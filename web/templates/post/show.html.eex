<ul>

  <h1>
    <%= @post.title %>
  </h1>


    <%= @post.body %>

  <div>
    <%= render "comments.html", post: @post %>
  </div>

  <li>
    <%= render "comment_form.html", post: @post, changeset: @changeset,
    action: post_post_path(@conn, :add_comment, @post) %>
  </li>

</ul>

<%= link "Edit", to: post_path(@conn, :edit, @post), class: "btn btn-default btn-xs" %><span></span>
<%= link "Back", to: post_path(@conn, :index), class: "btn btn-default btn-xs" %>
